<div class="articles">
  <h1>Articles</h1>
  <h2 class="login">
    <% if is_user_logged_in? %>
      <a href="/home/logout">Logout</a>
    <% else %>
      <a href="/home/login">Login</a>
    <% end %>
  </h2>
  <form method="POST" action="/home/index">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" placeholder="Search for news..." name="query" />
    <button type="submit">Search</button>
  </form>
  <% @articles && @articles.items.each do |item| %>
    <div class="article">
      <h2><%= item.title %></h2>
      <p><%= is_user_logged_in? ? (raw item.description) : "You must login to view this" %></p>
      <p><%= item.pubDate %></p>
    </div>
  <% end %>
</div>
